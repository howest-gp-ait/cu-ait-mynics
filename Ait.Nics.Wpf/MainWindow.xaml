        </GroupBox>
        <GroupBox Header="IPv4 Info : " HorizontalAlignment="Left" Height="275" Margin="274,177,0,0" VerticalAlignment="Top" Width="272">
            <Label x:Name="lblIP4" Content="-" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.394,0.509"/>
        </GroupBox>
        <GroupBox Header="IPv6 Info : " HorizontalAlignment="Left" Height="275" Margin="560,177,0,0" VerticalAlignment="Top" Width="272">
            <Label x:Name="lblIP6" Content="-" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
